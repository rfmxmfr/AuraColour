FROM node:18-alpine

WORKDIR /app

# Copy package files first for better caching
COPY package*.json ./

# Install dependencies with specific Zod version
RUN npm install --legacy-peer-deps
RUN npm remove zod
RUN npm install zod@3.20.2 --save

# Copy source code
COPY . .

# Set environment variables
ENV NODE_ENV=development
ENV NEXT_PUBLIC_SUPABASE_URL=http://supabase-db:5432
ENV NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev"]